{
  "compilerOptions": {
    "lib": [
      "es2019"
    ],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "./src/@types/"
    ],
    "types": [
      "express"
    ],
  },
  "exclude": ["node_modules", "src/targets/*", "src/schema/graphql/generated.ts"],
  "include": ["./src/**/*"],
}